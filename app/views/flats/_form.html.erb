
<div class="flat-form">
    <%= simple_form_for flat do |f| %>
      <%= f.input :name %>
      <%= f.input :photo, as: :file %>
      <%= f.input :description %>
      <%= f.input :address %>
      <%= f.input :price_per_night %>
      <%= f.input :tag_list, hint: "Add your tags, separated by commas" %>
      <%= f.submit "Save my flat", class: "btn btn-confirm" %>
    <% end %>
</div>



