<div class="container">
  <div class="col-8 offset-2">
    <div class="flat-box">
      <h2><%= @flat.name %></h2>
      <p><%= @flat.description %></p>

      <div class="flat-infos">
        <p><%= @flat.address %></p>
        <p><%= @flat.price_per_night %> â‚¬</p>
      </div>
      <div class="flat-tags">
        <ul>
          <% @flat.tag_list.each do |tag| %>
            <li><%= tag %> </li>
          <% end %>
        </ul>
      </div>
    </div>

    <%= link_to "Modify",  edit_flat_path(@flat), class: "btn btn-primary"  %>
    <%#= link_to "Delete",  flat_path(@flat), class: "btn btn-alert"  %>
    <%= link_to "Delete #{@flat.name}",
                            flat_path(@flat),
                            class: "service-submit-btn",
                            method: :delete,
                            data: { confirm: "Are you sure?" } %>
  </div>
</div>
