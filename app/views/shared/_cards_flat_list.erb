<div class="cards-box">
  <% @flats.each do |flat| %>
    <div class="card-flat">
      <%= link_to flat_path(flat) do %>
        <%= cl_image_tag flat.photo.key, :crop=>"fit", class:"card-photo"%>
        <div class="card-infos">
          <h3><%= flat.name %></h3>
            <div class="flat-infos">
              <div class="flat-tags">
                <ul>
                  <% flat.tag_list.each do |tag| %>
                    <li><%= tag %></li>
                  <% end %>
                </ul>
              </div>
            </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>